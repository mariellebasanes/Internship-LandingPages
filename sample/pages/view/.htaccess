RewriteEngine On

# DO NOT inherit rules from parent directory
RewriteOptions InheritDownBefore

# Disable the .php rewrite rule explicitly (by absorbing it with our own rule)
# This MUST come before any id-matching logic
RewriteRule ^([^.]+)\.php$ - [L]

# Skip physical files and folders
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Root path: /manage/ → index.php
RewriteRule ^$ index.php [QSA,L]

# Any single path: /manage/abc → index.php?id=abc
RewriteRule ^([^/]+)/?$ index.php?id=$1 [QSA,L]
